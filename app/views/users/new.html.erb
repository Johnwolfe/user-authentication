<h1>Sign up here</h1>

<%=form_for @user do |f| %>

	<% if @user.errors.full_messages.any? %>
	  <ul>
	    <% @user.errors.full_messages.each do |error_message| %>
	      <li><%= error_message%></li> <br />
	    <% end %>
	  </ul>
	<% end %>

	<%=f.label :email %>
	<%=f.text_field :email %>
	<%=f.label :password %>
	<%=f.password_field :password %>
	<%=f.label :password_confirmation %>
	<%=f.password_field :password_confirmation %>
	<%=f.submit "Sign Up" %>
<%end%>